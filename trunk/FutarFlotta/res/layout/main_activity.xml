<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
    
    <Button
        android:id="@+id/btnMap"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:text="Térkép" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignLeft="@+id/btnMap"
        android:layout_below="@+id/btnMap"
        android:layout_marginTop="16dp"
        android:text="Beállítások" />

    <Button
        android:id="@+id/btnUsers"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignTop="@+id/btnMap"
        android:layout_toRightOf="@+id/btnMap"
        android:text="Felhasználók" />

    <Button
        android:id="@+id/btnTasks"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignLeft="@+id/btnUsers"
        android:layout_alignTop="@+id/btnSettings"
        android:text="Feladatok" />

    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnSettings"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnAkarmi"
        android:layout_marginBottom="36dp"
        android:text="Kijelentkezés" />

    <TextView
        android:id="@+id/txtFelhasznalo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Főmenü"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>